<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <style>
      body { font-family: verdana, sans-serif; background-color: #F6F6EF; padding: 0; margin: 0;}
      #body-wrapper { padding: 0 2em 1em 2em; }
      #form-wrapper table { margin: 0; background-color: #f60; font-size: smaller; padding: 5px; }
      form { margin: 0; }
      h3 { color: #444; }
      #chart { margin: 0 0 3em 0; }
      #chart img { border: 1px solid #ddd; padding: 10px; background-color: white; }
      #chart, form { text-align: center; }

      #form-wrapper a:link,
      #form-wrapper a:visited { color: white; text-decoration: none }
      #form-wrapper a:hover { text-decoration: underline; }


#comments-wrapper { font-size: 10pt; color: black; margin-top: 1.5em; }
.comment { margin-bottom: 3em; }
.comment-header { color: #828282; }
.comment-header  a:link,
.comment-header  a:visited { color: #828282; text-decoration: none; }
.comment-header  a:hover { text-decoration: underline; }

.comment-rank { font-weight: bold; color: #444; }
.comment a:link,
.comment a:visited { color: #828282; }
#comments-wrapper p { margin: 0; }

    </style>
  </head>
  <body>
    <div id="form-wrapper">
      <table width="100%" cellspacing="0">
        <tr>
          <td></td>
          <td style="text-align: center;">
            <form action="/hn/best-of-ebook" method="POST">
              The best
              <!-- <select name="filter" id="filter"> -->
              <!--   <option value="best">best</option> -->
              <!--   <option value="worst">worst</option> -->
              <!--   <option value="first">first</option> -->
              <!--   <option value="last">last</option> -->
              <!-- </select> -->

              <select name="limit" id="limit">
                <option value="10">10</option>
                <option value="25">25</option>
                <option value="50">50</option>
                <option value="75">75</option>
                <option value="100" selected>100</option>
              </select>
              
              
              comments by <input type="text" id="username" name="username">
              <input type="submit" onclick="hn.generateChart();return false;" value="Show" />
              <input type="submit" value="PDF E-book" />
            </form>
          </td>
          <td style="text-align: right; padding-right: 20px; color: white;">
            <a href="https://github.com/pdfcrowd/hnstuff">source</a>|<a href="mailto:redpill27@gmail.com">feeback</a></td>
        </tr>
      </table>
    </div>
    
    <div id="body-wrapper">
      <div id="chart" style="display:none">
        <h3>Distribution of Comments</h3>
        <p>The marker size is proportional to the comment length.</p>
        <img usemap="#chart-map"></img><br/>
      </div>
    
      <div id="comments-wrapper">
      </div>
      
      <p id="query-result">
      </p>
    </div>
      
     <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js"></script>
     <script type="text/javascript" src="js/underscore-min.js"></script>
     <script type="text/javascript" src="js/hncharts.js"></script>
     <script type="text/javascript" src="/js/comment_charts.js"></script>
  </body>
</html>
